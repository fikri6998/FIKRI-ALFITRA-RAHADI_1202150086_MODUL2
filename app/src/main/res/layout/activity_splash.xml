<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMain"
    tools:context="fikri6998.fikrialfitrarahadi_1202150086_modul2.SplashActivity">


    <ImageView
        android:id="@+id/imagesplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="198dp"
        android:contentDescription="Benedict The Fine Restaurant"
        android:padding="10dp"
        app:srcCompat="@drawable/logo_benedict" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagesplash"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="The Fine Restaurant" />
</RelativeLayout>
